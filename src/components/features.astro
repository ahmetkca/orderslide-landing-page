---
import ContentSection from "~/components/content-section.astro";
import { Icon } from "astro-icon";

const features = [
  {
    title: "Connect your shops with one-click",
    description:
      "One click integration, makes it easy and fast connection to OrderSlide so you can focus on more important things.",
    icon: "mdi:handshake",
  },
  {
    title: "Easy to use",
    description:
      "Visual dashboard makes it easy to understand and use.",
    icon: "mdi:feather",
  },
  {
    title: "Automate your workflow",
    description:
      "Automate repetitive tasks to save time and money. So you can enjoy your lunch and OrderSlide will purchase your Shipping Labels automatically.",
    icon: "mdi:directions-fork",
  },
  {
    title: "Lightning fast Integration",
    description:
      "Our advanced API connections are faster than speed of light.",
    icon: "mdi:graph",
  },
  {
    title: "Powerful Inventory Control Menu",
    description:
      "Manage your inventory with ease. OrderSlide will automatically update your inventory when you purchase shipping labels.",
    icon: "mdi:search-web",
  },
  {
    title: "Pick, Pack and Ship",
    description:
      "Visual Pick, Pack and Ship module makes your fulfillment process seamless and %99.9 accurate.",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    Easy to use order management platform for small to big size e-commerce shops
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset">
          <div class="w-16 h-16 p-3 border-2 border-current rounded-full">
            <Icon name={icon} />
          </div>
          <p class="text-xl font-extrabold text-center">{title}</p>
          <p class="text-sm text-center text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
